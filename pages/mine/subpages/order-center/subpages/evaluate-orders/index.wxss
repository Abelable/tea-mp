.menu-wrap {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  width: 100%;
  height: 40px;
  background: #fff;
  border-top: 1px solid #f5f6f8;
  z-index: 100;
}
.menu-item {
  flex: 1;
  height: 40px;
  color: #666;
  font-size: 14px;
}
.menu-item.selected {
  position: relative;
  color: var(--theme-color);
  font-size: 15px;
  font-weight: bold;
}
.menu-item.selected::after {
  position: absolute;
  bottom: 2px;
  left: 50%;
  transform: translateX(-50%);
  width: 15px;
  height: 3px;
  content: '';
  border-radius: 1.5px;
  background: var(--theme-color);
}

.content {
  margin-top: 40px;
  padding: 24rpx;
}

.no-more-tips {
  margin-top: 36rpx;
  color: #999;
  font-size: 24rpx;
  text-align: center;
}
