.goods-item {
  margin-top: 24rpx;
}

.goods-cover-wrap {
  margin-right: 18rpx;
  width: 184rpx;
  height: 184rpx;
  border-radius: 16rpx;
}
.goods-cover-wrap.is-gift {
  position: relative;
  padding: 6rpx;
  border-radius: 18rpx;
  background: linear-gradient(139deg, rgba(249, 250, 216), rgba(211, 225, 155));
}
.goods-cover {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}
.goods-cover.is-gift {
  border-radius: 14rpx;
}

.promote-tag {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 110rpx;
  height: 40rpx;
}

.goods-content {
  display: flex;
  flex-direction: column;
  justify-content: space-between; 
  padding-right: 18rpx;
  flex: 1; 
  height: 190rpx;
}
.goods-name {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}
.goods-sku {
  padding: 6rpx 12rpx;
  width: fit-content;
  color: #999;
  font-size: 24rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
}
.goods-price-wrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.count-wrap {
  font-size: 24rpx;
  color: #666;
}
.count {
  margin-left: 5rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.btn-wrap {
  margin-top: 24rpx;
  display: flex;
  justify-content: flex-end;
  width: 100%;
}
.btn {
  margin-right: 16rpx;
  width: 160rpx;
  height: 56rpx;
  line-height: 54rpx;
  text-align: center;
  font-size: 26rpx;
  color: var(--theme-color);
  border-radius: 28rpx;
  border: 1rpx solid var(--theme-color);
}
.btn.active {
  color: #fff;
  background: var(--theme-color);
}
.btn:last-child {
  margin-right: 0;
}
