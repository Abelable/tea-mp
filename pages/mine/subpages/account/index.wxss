.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 100;
}
.nav-bar.show-bg {
  background: #fff;
}
.nav-bar-inner {
  display: flex;
  align-items: center;
  padding-left: 12px;
  height: 44px;
}
.nav-bar-title {
  margin-right: 44px;
  flex: 1;
  color: #000;
  font-size: 34rpx;
  font-weight: 500;
  text-align: center;
}

.container {
  position: relative;
  padding: 24rpx;
  min-height: 100vh;
  background-image: url("https://static.chengxinxingqiu.cn/mp/account_bg.png");
  background-position: top center;
  background-size: cover;
  background-repeat: no-repeat;
}

.amount-card {
  margin-top: 24rpx;
  background: linear-gradient(90deg, #fff8f7 0%, #ffebe6 100%);
  border-radius: 20rpx;
  overflow: hidden;
}
.amount-total {
  position: relative;
  padding: 32rpx;
  height: 180rpx;
  background-image: url("https://static.chengxinxingqiu.cn/mp/account_amount_bg.png");
  background-position: -20rpx -20rpx;
  background-size: calc(100% + 40rpx) calc(100% + 40rpx);
  background-repeat: no-repeat;
}
.amount-title {
  color: #14191f;
  font-size: 28rpx;
}
.withdraw-record-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 130rpx;
  height: 48rpx;
  color: #ff4747;
  font-size: 24rpx;
  background: #fdf8f7;
  border-radius: 24rpx;
}
.amount {
  margin-top: 12rpx;
  color: #14191f;
  font-size: 44rpx;
  font-weight: bold;
}

.points-exchange {
  padding: 32rpx;
}
.points-info {
  flex: 1;
}
.point-icon {
  margin-right: 6rpx;
  width: 36rpx;
  height: 36rpx;
}
.points-title {
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
}
.points-desc {
  margin-top: 8rpx;
  color: #666;
  font-size: 24rpx;
  font-weight: 300;
}
.exchange-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 116rpx;
  height: 48rpx;
  color: #999;
  font-size: 24rpx;
  background: #e9e9e9;
  border-radius: 24rpx;
}
.exchange-btn.active {
  color: #fff;
  background: linear-gradient(135deg, #ffa266 0%, #ff3d39 64%, #ff3636 100%);
}

.amount-type-wrap {
  padding: 32rpx 40rpx;
  background: #fff;
  border-radius: 0 0 20rpx 20rpx;
}
.amount-type-item:first-child {
  margin-right: 152rpx;
}
.amount-type-name {
  color: #3c3f42;
  font-size: 24rpx;
}
.type-amount {
  margin-top: 20rpx;
  color: #14191f;
  font-size: 40rpx;
  font-weight: bold;
}
.type-withdraw-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 24rpx;
  width: 116rpx;
  height: 48rpx;
  color: #999;
  font-size: 24rpx;
  background: #f1f1f1;
  border-radius: 24rpx;
}
.type-withdraw-btn.active {
  color: #fff;
  background: linear-gradient(135deg, #ffa266 0%, #ff3d39 64%, #ff3636 100%);
}
.withdraw-tips-wrap {
  padding: 24rpx 20rpx;
}
.withdraw-time-tips {
  flex: 1;
  color: #6a6f75;
  font-size: 24rpx;
}
.withdraw-rules-btn {
  display: flex;
  align-items: center;
  color: var(--theme-color);
  font-size: 24rpx;
}
.arrow {
  width: 32rpx;
  height: 32rpx;
}

.menu-tabs {
  display: flex;
}
.menu-tab {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 140rpx;
  color: #6a6f75;
  font-size: 28rpx;
}
.menu-tab.active {
  position: relative;
  color: #14191f;
  font-size: 32rpx;
  font-weight: 550;
}
.active-tag {
  position: absolute;
  left: 50%;
  bottom: 28rpx;
  transform: translateX(-50%);
  width: 40rpx;
  height: 16rpx;
}

.daily-data-wrap {
  padding: 28rpx;
  padding-bottom: 32rpx;
  background: #fff;
  border-radius: 16rpx;
}
.date-menu {
  display: flex;
  justify-content: space-between;
}
.date {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 116rpx;
  height: 56rpx;
  color: #6a6f75;
  font-size: 28rpx;
  border-radius: 28rpx;
  border: 1px solid transparent;
}
.date.selected {
  color: var(--theme-color);
  background: #fff3ec;
  border: 1px solid var(--theme-color);
}

.daily-data-list {
  display: flex;
  margin-top: 46rpx;
}
.daily-data-item {
  flex: 3;
  text-align: center;
}
.daily-data-item:first-child {
  flex: 2;
}
.daily-data {
  color: #000;
  font-size: 32rpx;
  font-weight: 550;
}
.daily-data-desc {
  margin-top: 16rpx;
  color: #6a6f75;
  font-size: 24rpx;
}

.sales-record-list {
  margin-top: 24rpx;
}
.sales-record-item {
  margin-bottom: 24rpx;
  padding: 24rpx;
  background: #fff;
  border-radius: 16rpx;
}
.order-info {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
}
.order-sn-wrap {
  flex: 1;
  color: #6a6f75;
  font-size: 24rpx;
}
.order-sn {
  display: flex;
  align-items: center;
}
.order-sn-arrow {
  width: 24rpx;
  height: 24rpx;
}
.order-status-wrap {
  display: flex;
  margin-top: 12rpx;
}
.order-time {
  margin-left: 48rpx;
}
.order-commission-wrap {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.order-commission {
  color: #14191f;
  font-size: 32rpx;
  font-weight: 550;
}
.order-type {
  margin-top: 8rpx;
  padding: 6rpx 10rpx;
  width: fit-content;
  color: #a1a9b3;
  font-size: 20rpx;
  line-height: 1;
  border: 1px solid #a1a9b3;
  border-radius: 8rpx;
}
.goods-info-wrap {
  display: flex;
  align-items: center;
  margin-top: 24rpx;
}
.goods-cover {
  width: 150rpx;
  height: 150rpx;
  border-radius: 16rpx;
}
.goods-info {
  display: flex;
  flex-direction: column;
  margin-left: 16rpx;
  flex: 1;
  height: 150rpx;
}
.goods-name {
  color: #14191f;
  font-size: 26rpx;
  font-weight: 550;
}
.goods-spec {
  margin: 4rpx;
  flex: 1;
  color: #6a6f75;
  font-size: 22rpx;
}
.goods-commission {
  color: var(--theme-color);
  font-size: 24rpx;
}

.no-more-tips {
  margin-top: 36rpx;
  color: #999;
  font-size: 24rpx;
  text-align: center;
}
