.navigation-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 44px;
  background: #fff;
  box-sizing: initial;
  z-index: 100;
}
.edit-btn {
  margin-left: 8px;
  width: 120rpx;
  height: 32px;
  color: #000;
  font-size: 15px;
  border-radius: 16px;
  border: 0.5px solid #e1e1e1;
}
.navigation-title {
  color: #000;
  font-size: 32rpx;
  font-weight: 550;
}

.checkbox {
  margin-left: 18rpx;
  width: 50rpx;
  transform: scale(0.8);
}
.checkbox .wx-checkbox-input {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}
.checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  border: none;
  background: var(--theme-color);
}
.checkbox.danger .wx-checkbox-input.wx-checkbox-input-checked {
  background: #fd0b0a;
}
.checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.empty-illus {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 500rpx;
}
.illus {
  width: 240rpx;
  height: 240rpx;
}
.empty-desc {
  color: #666;
  font-size: 28rpx;
}
.visit-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 32rpx;
  width: 150rpx;
  height: 60rpx;
  color: #fff;
  font-size: 28rpx;
  border-radius: 30rpx;
  background: var(--theme-color);
}

.new-year-goods-list-wrap {
  position: relative;
  margin: 24rpx;
  padding-top: 100rpx;
  overflow: hidden;
  background: #fff;
  border-radius: 12rpx;
}
.new-year-bar {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
}
.new-year-bar-bg {
  width: 100%;
}
.new-year-bar-title {
  position: absolute;
  top: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  color: #BC3723;
  font-size: 36rpx;
  font-weight: bold;
}
.new-year-goods-list {
  padding-right: 24rpx;
}

.goods-list-wrap {
  margin: 24rpx;
  padding-top: 24rpx;
  padding-right: 24rpx;
  overflow: hidden;
  background: #fff;
  border-radius: 12rpx;
}
.goods-list {
  margin-bottom: 28rpx;
}
.goods-list:last-child {
  margin-bottom: 0;
}
.goods-img {
  margin-left: 8rpx;
  margin-right: 18rpx;
  width: 184rpx;
  height: 184rpx;
  border-radius: 16rpx;
}
.goods-img.invalid {
  opacity: 0.6;
}
.goods-content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-right: 18rpx;
  flex: 1;
  height: 190rpx;
}
.goods-name {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}
.goods-name.invalid {
  opacity: 0.6;
}
.goods-sku-wrap {
  display: flex;
  align-items: center;
  padding: 0 12rpx;
  height: 42rpx;
  width: fit-content;
  background: #f9f9f9;
  border-radius: 8rpx;
}
.goods-sku {
  flex: 1;
  color: #999;
  font-size: 24rpx;
}
.sku-edit-icon {
  margin-left: 6rpx;
  width: 12rpx;
  height: 12rpx;
  transform: rotate(90deg);
}
.goods-price-wrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.goods-price {
  font-size: 24rpx;
  line-height: 1;
}
.price-market {
  margin-left: 10rpx;
  color: #bbb;
  font-size: 22rpx;
  text-decoration: line-through;
}
.invalid-tips-wrap {
  display: flex;
  align-items: center;
  height: 50rpx;
}
.invalid-tips {
  flex: 1;
  color: #333;
  font-size: 26rpx;
  white-space: nowrap;
}
.reset-spec-btn {
  width: 110rpx;
  height: 46rpx;
  color: #fd0807;
  font-size: 24rpx;
  text-align: center;
  line-height: 42rpx;
  border-radius: 23rpx;
  border: 2rpx solid #fd0807;
}
.swipe-cell-delete-btn {
  width: 65px;
  height: 100%;
  color: #fff;
  font-size: 28rpx;
  background: #fd0807;
}

.recommend-goods-wrap {
  margin-top: 40rpx;
  padding: 0 20rpx;
}

.nomore-tip {
  padding: 18rpx 0;
  color: #999;
  font-size: 24rpx;
  text-align: center;
}

.bottom-bar {
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  background-color: #fff;
  box-shadow: 0 -2rpx 2rpx 0 rgba(0, 0, 0, 0.05);
  z-index: 50;
}
.select-all {
  display: flex;
  align-items: center;
  font-size: 26rpx;
}
.bar-main {
  display: flex;
  align-items: center;
}
.total-price {
  color: #333;
  font-size: 26rpx;
}
.submit,
.delete-btn {
  margin: 10rpx 20rpx;
  height: 80rpx;
  width: 220rpx;
  color: #999;
  background: #f2f2f2;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 40rpx;
}
.submit.active {
  color: #fff;
  background: linear-gradient(135deg, #ffa266 0%, #ff3d39 64%, #ff3636 100%);
}
.delete-btn.active {
  color: #fff;
  background: #fd0b0a;
}
