page {
  position: relative;
  background: #f5f5f5;
  display: flex;
}

.nav-bar {
  position: fixed;
  width: 100%;
  box-sizing: initial;
  z-index: 100;
}
.nav-bar-inner {
  display: flex;
  align-items: center;
  height: 44px;
}

.promoter-info {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  width: 350rpx;
}
.avatar {
  width: 34px;
  height: 34px;
  border-radius: 50%;
}
.nickname-wrap {
  margin-left: 10rpx;
  flex: 1;
}
.nickname {
  color: #fff;
  font-size: 28rpx;
  font-weight: 550;
}
.signature {
  color: #fff;
  font-size: 18rpx;
}

.nav-bar.show-bg {
  background: rgba(255, 255, 255, 0.88);
  backdrop-filter: blur(8px);
}
.nav-bar.show-bg .nickname {
  color: #333;
}
.nav-bar.show-bg .signature {
  color: #666;
}

.search-bar {
  display: flex;
  align-items: center;
  margin-left: 16rpx;
  padding: 0 22rpx;
  width: 240rpx;
  height: 36px;
  border-radius: 18px;
  background: rgba(255, 255, 255, 0.6);
  border: 0.5px solid #e1e1e1;
}
.search-icon {
  width: 16px;
  height: 16px;
}
.placeholder {
  flex: 1;
  margin-left: 12rpx;
  color: #999;
  font-size: 26rpx;
}

.search-btn,
.share-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 16rpx;
  width: 34px;
  height: 34px;
  border-radius: 18px;
  background: rgba(255, 255, 255, 0.6);
  border: 0.5px solid #e1e1e1;
}
.search-icon,
.share-icon {
  width: 16px;
  height: 16px;
}

.banner-wrap {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 750rpx;
}
.banner-bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  transition: opacity .8s ease;
}
.banner-bg.visible {
  opacity: 1;
  transition: opacity .8s ease;
}
.banner {
  height: 750rpx;
}
.banner-item {
  position: relative;
}
.banner-img {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
}
.banner-dots {
  position: absolute;
  right: 20rpx;
  bottom: 250rpx;
  width: 160rpx;
  height: 4rpx;
  background: rgba(0, 0, 0, 0.2);
}
.banner-dot {
  position: absolute;
  top: 0;
  height: 4rpx;
  background: var(--theme-color);
}

.container {
  margin-top: 500rpx;
  padding: 20rpx;
  padding-bottom: calc(100rpx + env(safe-area-inset-bottom));
  width: 100%;
  background: linear-gradient(
    180deg,
    rgba(245, 245, 245, 0) 0%,
    rgba(245, 245, 245, 1) 180rpx,
    rgba(245, 245, 245, 1) 100%
  );
  z-index: 80;
}

.title {
  display: flex;
  align-items: flex-end;
  margin: 40rpx 0;
}
.main-title {
  width: 140rpx;
  height: 42rpx;
} 
.sub-title {
  margin-left: 20rpx;
  margin-bottom: 8rpx;
  width: 200rpx;
  height: 20rpx;
}
.sub-title.hot {
  width: 290rpx;
}

.card {
  height: 400rpx;
  background: #fff;
}

.grid {
  display: flex;
  margin-top: 20rpx;
}
.grid-left {
  width: 300rpx;
  height: 380rpx;
  background: #fff;
}
.grid-right {
  margin-left: 20rpx;
  flex: 1;
}
.grid-right-top, .grid-right-bottom {
  height: 180rpx;
  background: #fff;
}
.grid-right-bottom {
  margin-top: 20rpx;
}

.village-part {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}
.village-illus {
  width: 164rpx;
  height: 116rpx;
  border-radius: 8rpx;
}

.live-overview-wrap {
  margin-top: 20rpx;
}
.live-overview {
  padding: 16rpx 20rpx;
  width: 347rpx;
  height: 462rpx;
  border-radius: 18rpx;
  background-image: url('https://static.chengxinxingqiu.cn/mp/live/showcase_bg.png');
  background-size: 100% 100%;
  background-repeat: no-repeat;
}

.live-overview-title {
  margin-left: 32rpx;
  color: #000;
  font-size: 28rpx;
  font-weight: 550;
}
.live-overview-more {
  color: #999;
  font-size: 22rpx;
}
.more-icon {
  width: 22rpx;
  height: 22rpx;
}
.live-list {
  margin-top: 10rpx;
  height: 378rpx;
}
.live-item {
  position: relative;
}
.live-cover {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}
.status-wrap {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  padding-right: 12rpx;
  color: #fff;
  font-size: 18rpx;
  border-radius: 16rpx;
  background: rgba(0, 0, 0, 0.3);
}
.status {
  margin-right: 12rpx;
  padding: 0 12rpx;
  height: 32rpx;
  border-radius: 16rpx;
}
.status.live {
  background: var(--theme-color);
}
.status.notice {
  background: linear-gradient(90deg, #40AFFF 0%, #2C75FC 100%);
}
.live-icon {
  margin-right: 6rpx;
  width: 18rpx;
  height: 18rpx;
}
.notice-spot {
  margin-right: 6rpx;
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: #fff;
}
.live-info-wrap {
  position: absolute;
  bottom: 0;
  padding: 16rpx 16rpx 32rpx;
  width: 100%;
  border-radius: 0 0 12rpx 12rpx;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.5) 100%);
}
.live-title {
  color: #fff;
  font-size: 26rpx;
  font-weight: bold;
  text-shadow: 0 0 1px #999;
}
.live-info {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
}
.anchor-avatar {
  margin-right: 8rpx;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
}
.anchor-name {
  flex: 1;
  color: #fff;
  font-size: 22rpx;
  font-weight: 500;
}
.praise-info {
  display: flex;
  align-items: center;
  color: #fff;
  font-size: 20rpx;
}
.live-praise-icon {
  margin-right: 4rpx;
  width: 26rpx;
  height: 20rpx;
}
.notice-btn {
  margin-left: 8rpx;
  padding: 0 18rpx;
  height: 36rpx;
  color: #fff;
  font-size: 18rpx;
  border-radius: 8rpx;
  background: var(--theme-color);
}

.integrity-illus {
  display: block;
  width: 347rpx;
  height: 220rpx;
  border-radius: 8rpx;
}

.middle-banner {
  margin-top: 20rpx;
}
.middle-banner-img {
  width: 100%;
  height: 100%;
  border-radius: 18rpx;
}
.middle-banner .wx-swiper-dot {
  width: 12rpx;
  height: 12rpx;
}

.menu {
  display: flex;
}
.menu-item {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 126rpx;
  color: #6a6f75;
  font-size: 28rpx;
}
.menu-item.active {
  position: relative;
  color: #14191f;
  font-size: 32rpx;
  font-weight: 550;
}
.menu-active-tag {
  position: absolute;
  left: 50%;
  bottom: 16rpx;
  transform: translateX(-50%);
  width: 40rpx;
  height: 16rpx;
}

.hometown-wrap {
  margin-bottom: 20rpx;
  padding-top: 114rpx;
  height: 610rpx;
  background-image: url('https://static.chengxinxingqiu.cn/mp/hometown/card_bg.png');
  background-size: 100% 100%;
  background-repeat: no-repeat;
}
.more-btn {
  margin-left: 48rpx;
  color: #14191F;
  font-size: 20rpx;
}
.more-arrow {
  width: 20rpx;
  height: 20rpx;
}

.hometown-list {
  margin: 70rpx 40rpx 0;
}
.hometown-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 18rpx;
  width: 192rpx;
  height: 260rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 4rpx 20rpx 0rpx rgba(51,62,91,0.5);
  border-radius: 16rpx;
}
.hometown-cover {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  height: 130rpx;
}
.hometown-name {
  margin-top: 8rpx;
  color: #14191F;
  font-size: 28rpx;
  font-weight: 500;
}
.hometown-desc {
  margin-top: 8rpx;
  color: #14191F;
  font-size: 20rpx;
}

.split-title {
  margin-bottom: 14rpx;
  color: #14191f;
  font-size: 32rpx;
  font-weight: 550;
}
.praise-icon {
  margin-left: 10rpx;
  margin-bottom: 14rpx;
  width: 40rpx;
  height: 46rpx;
}

.no-more-tips {
  margin-top: 36rpx;
  color: #999;
  font-size: 22rpx;
  text-align: center;
}
