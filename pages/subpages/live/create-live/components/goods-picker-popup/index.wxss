.goods-picker-popup {
  position: relative;
  padding: 24rpx;
  padding-bottom: 100rpx;
  height: 1100rpx;
  max-height: 100vh;
  background: #f5f6f7;
}

.search-bar {
  margin-bottom: 24rpx;
}
.search-content {
  position: relative;
  padding-right: 120rpx;
  height: 72rpx;
  background: #fff;
  border-radius: 36rpx;
  border: 1px solid var(--theme-color);
}
.search-icon {
  margin-left: 20rpx;
  width: 30rpx;
  height: 30rpx;
}
.search-input {
  padding-left: 10rpx;
  flex: 1;
  height: 72rpx;
  color: #333;
  font-size: 26rpx;
}
.cancel-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
}
.cancel-icon {
  width: 32rpx;
  height: 32rpx;
}
.search-btn {
  position: absolute;
  top: -1px;
  right: -1px;
  width: 120rpx;
  height: 72rpx;
  font-size: 26rpx;
  color: #fff;
  border-radius: 36rpx;
  background: var(--theme-color);
}

.goods-list-wrap {
  height: 100%;
  overflow-y: scroll;
}
.goods-list {
  padding-bottom: 100rpx;
}
.goods-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 48rpx;
}
.goods-item .pick-icon {
  margin-right: 24rpx;
}
.goods-img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 24rpx;
}
.goods-info-wrap {
  margin-left: 30rpx;
  flex: 1;
}
.goods-name {
  margin-bottom: 8rpx;
  color: #333;
  font-size: 30rpx;
  font-weight: 500;
}
.goods-price-wrap {
  margin-top: 48rpx;
}
.goods-stock {
  color: #999;
  font-size: 24rpx;
}

.bottom-bar {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  background: #fff;
}
.btn-wrap {
  padding: 0 32rpx;
  height: 100rpx;
}
.select-all-tips {
  margin-left: 10rpx;
  color: #333;
  font-size: 28rpx;
}
.confirm-btn {
  width: 196rpx;
  height: 64rpx;
  color: #666;
  font-size: 28rpx;
  background: #E4E4E4;
  border-radius: 32rpx;
}
.confirm-btn.active {
  color: #fff;
  background: var(--theme-color);
}
