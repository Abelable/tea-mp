.live-notice {
  position: absolute;
  width: 100vw;
  height: 100vh;
}

.info-wrap {
  margin: 40rpx 24rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx;
  background: rgba(0, 0, 0, 0.1);
  border-radius: 80rpx;
}

.cover-wrap {
  position: relative;
  width: 600rpx;
  height: 600rpx;
  border-radius: 48rpx;
  overflow: hidden;
}
.cover {
  width: 600rpx;
  height: 600rpx;
}
.tag {
  position: absolute;
  top: 32rpx;
  left: 32rpx;
  width: 100rpx;
  height: 50rpx;
  color: #fff;
  font-size: 24rpx;
  background: linear-gradient(90deg, #40AFFF 0%, #2C75FC 100%);
  border-radius: 25rpx;
}
.spot {
  margin-right: 12rpx;
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: #fff;
}

.title {
  margin-top: 48rpx;
  max-width: 680rpx;
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
}

.anchor-info {
  display: flex;
  align-items: center;
  margin-top: 32rpx;
}
.anchor-avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}
.anchor-name {
  margin-left: 12rpx;
  max-width: 300rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
}
.follow-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 12rpx;
  width: 80rpx;
  height: 40rpx;
  color: #fff;
  font-size: 20rpx;
  background: var(--theme-color);
  border-radius: 25rpx;
}

.time-wrap {
  margin-top: 48rpx;
  padding-top: 30rpx;
  width: 100%;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 70rpx;
  border-top: 1px solid rgba(255, 255, 255, 0.2);
}

.btn-wrap {
  position: absolute;
  left: 0;
  bottom: 0;
  padding: 0 24rpx calc(24rpx + env(safe-area-inset-bottom));
  width: 100%;
}
.subscribe-btn, .share-btn {
  width: 340rpx;
  height: 80rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  border-radius: 40rpx;
}
.subscribe-btn {
  background: rgba(0, 0, 0, 0.1);
}
.share-btn {
  background: var(--theme-color);
}

