.goods-item {
  margin-bottom: 32rpx;
  font-size: 0;
  overflow: hidden;
  opacity: 0;
}
.goods-item.show {
  opacity: 1;
  transition: opacity .2s ease;
}

.cover-wrap {
  position: relative;
  width: 168rpx;
  height: 168rpx;
  font-size: 0;
  border-radius: 8rpx;
  overflow: hidden;
}
.cover-wrap.is-gift {
  padding: 6rpx;
  background: linear-gradient(139deg, rgba(249, 250, 216), rgba(211, 225, 155));
}
.cover {
  width: 100%;
  height: 100%;
}

.promote-tag {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 114rpx;
  height: 44rpx;
}

.activity-tag {
  position: absolute;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 32rpx;
  background-image: url('https://static.chengxinxingqiu.cn/mp/group-buying-tag-bg.png');
  background-size: cover;
  background-position: -4rpx;
  background-repeat: no-repeat;
}
.notice-time, .end-time {
  color: #fff;
  font-size: 20rpx;
}

.content {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  /* padding-bottom: 28rpx; */
  flex: 1;
  min-height: 172rpx;
}

.goods-title {
  color: #333;
  font-size: 26rpx;
  font-weight: bold;
}

.introduce-wrap {
  margin-top: 5rpx;
  flex: 1;
}
.introduce {
  margin-top: 5rpx;
  color: #666;
  font-size: 22rpx;
}

.goods-data {
  margin-top: 5rpx;
  color: var(--theme-gold);
  font-size: 22rpx;
  font-weight: 300;
}

.coupon-list {
  display: flex;
  margin: 12rpx 0 10rpx;
}
.coupon {
  margin-right: 12rpx;
  padding: 2rpx 8rpx;
  width: fit-content;
  color: #FF4747;
  font-size: 18rpx;
  border-radius: 8rpx;
  border: 1rpx solid #FF4747;
}

.price-wrap {
  display: flex;
  margin-top: 12rpx;
}
.market-price {
  margin-left: 8rpx;
  color: #bbb;
  font-size: 22rpx;
  text-decoration: line-through;
}
.bottom-price {
  margin-left: 10rpx;
  margin-bottom: 20rpx;
  padding: 2rpx 8rpx;
  width: fit-content;
  color: #fff;
  font-size: 18rpx;
  background: #FF4747;
  border-radius: 8px 8px 8px 0px;
}

.add-icon {
  width: 44rpx;
  height: 44rpx;
}
