.tab-bar {
  position: fixed;
  left: 0;
  bottom: 0;
  padding-bottom: env(safe-area-inset-bottom);
  display: flex;
  align-items: center;
  width: 100%;
  height: 100rpx;
  box-sizing: initial;
  background: rgba(255, 255, 255, 0.88);
  backdrop-filter: blur(8px);
  box-shadow: 0 -1px 12px 0 rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.tab {
  position: relative;
  text-align: center;
  flex: 1;
  font-size: 0;
}
.icon {
  width: 40rpx;
  height: 40rpx;
}
.text {
  margin-top: 8rpx;
  color: #999;
  font-size: 18rpx;
  line-height: 1;
}
.text.selected {
  color: #000;
  font-weight: 500;
}
